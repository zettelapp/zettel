{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "isolatedModules": true,
    "sourceMap": true,
    "composite": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "checkJs": true,
    "allowJs": true,
    "strict": false,
    "moduleResolution": "node",
    "target": "esnext",
    "ignoreDeprecations": "5.0",
    "types": [
      "svelte",
      "node",
      "vite/client"
    ]
  },
  "exclude": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "e2e/**/*"
  ]
}