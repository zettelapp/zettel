{
  "name": "@zkasten/web",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/web"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "dev": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "@zkasten/web:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "@zkasten/web:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "@zkasten/web:build:production",
          "hmr": false
        }
      }
    }
  }
}